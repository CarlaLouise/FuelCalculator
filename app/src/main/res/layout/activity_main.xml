<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/blue">

    <ImageView
        android:id="@+id/iv_shape"
        android:layout_width="412dp"
        android:layout_height="414dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_curvo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/gastos_combustivel"
        android:layout_width="240dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/bomba_combustivel"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_shape"
        app:layout_constraintStart_toStartOf="@+id/iv_shape" />

    <TextView
        android:id="@+id/tv_calc_gastos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculadora de gastos de combustível"
        android:layout_marginTop="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="28dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/gastos_combustivel"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:text="Não tem idéia de quanto vai gastar de combustível? Então está no lugar certo!"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="italic"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/tv_calc_gastos" />

    <Button
        android:id="@+id/btn_iniciar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Iniciar"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"/>


</androidx.constraintlayout.widget.ConstraintLayout>